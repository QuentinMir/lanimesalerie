<header>
    <!-- header top -->
    <div class="bg-head-top py-3">
        <div class="container">
            <!-- row tosvg-exportp -->
            <div class="row align-items-center">
                <div class="col-lg-6 col-6 d-flex">
                    <!-- Sous- row -->
                    <div class="row align-items-end">
                        <div class="col-lg-5 col-sm-12">
                            <!-- logo -->
                            <a href="{{ path('default') }}">
                                <img
                                        src="{{ asset('img/logo-svg.svg') }}"
                                        class="img-fluid mb-lg-2 mb-3"
                                        height="39"
                                        width="210"
                                        title="logo"
                                />
                            </a>
                        </div>

                        <!-- barre de recherche -->
                        {{ render(controller('App\\Controller\\NavSearchController::formNavBar')) }}


                    </div>
                </div>
                <div class="col-lg-6 col-6 mt-2">
                    <!-- Sous- row -->
                    <div class="row align-items-center">
                        <div class="col-lg-4 col-4">
                            <!-- Button trigger modal -->
                            <button
                                    type="button"
                                    class="btn text-white montserrat fs-14 lh-sm compte compte-small d-flex align-items-center"
                                    data-bs-toggle="modal"
                                    data-bs-target="#exampleModal"
                            >
                                <!-- icon compte -->

                                <svg
                                        class="me-lg-2 mb-1 text-center"
                                        width="20"
                                        height="20"
                                        viewbox="0 0 28 27"
                                >
                                    <g id="Account" transform="translate(-2 -3)">
                                        <path
                                                id="Tracé_44"
                                                data-name="Tracé 44"
                                                d="M21.947,16.332a8.017,8.017,0,1,0-1.714,1.444A11.978,11.978,0,0,1,27.959,28H4.042A12.006,12.006,0,0,1,8.12,19.949a1,1,0,1,0-1.314-1.508A14,14,0,0,0,2,29a1,1,0,0,0,1,1H29a1,1,0,0,0,1-1A13.975,13.975,0,0,0,21.947,16.332ZM10,11a6,6,0,1,1,6,6A6.006,6.006,0,0,1,10,11Z"
                                                fill="#fcfbf6"
                                        />
                                    </g>
                                </svg>

                                {% if app.user and app.user.roles | first == "ROLE_ADMIN" %}
                                    <em class="d-none d-sm-block d-lg-block"> Administrateur </em>
                                {% elseif app.user %}
                                    <em class="d-none d-sm-block d-lg-block"> {{ app.user.prenom }} {{ app.user.nom | first }} </em>
                                {% else %}
                                    <em class="d-none d-sm-block d-lg-block"> Mon compte </em>
                                {% endif %}
                            </button>

                            <!-- Modal -->


                            {% if app.user and app.user.roles | first == "ROLE_ADMIN" %}
                                <div class="modal fade" id="exampleModal" tabindex="-1"
                                     aria-labelledby="exampleModalLabel"
                                     aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">
                                                    Bonjour {{ app.user.prenom }} {{ app.user.nom }} </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="d-flex flex-column text-center">
                                                    <div>
                                                        <a class="mybutton mt-2 mb-4"
                                                           href="http://localhost:4200/">Administration</a>
                                                    </div>
                                                    <div>
                                                        <a class="btn btn-outline-primary" href="{{ path('compte') }}">Accéder
                                                            à mon compte</a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <a href="{{ path('app_logout') }}" class="btn btn-outline-dark">Me
                                                    déconnecter</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% elseif app.user %}
                                <div class="modal fade" id="exampleModal" tabindex="-1"
                                     aria-labelledby="exampleModalLabel"
                                     aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">
                                                    Bonjour {{ app.user.prenom }} {{ app.user.nom }} </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <a href="{{ path('compte') }}">Accéder à mon compte</a>
                                            </div>
                                            <div class="modal-footer">
                                                <a href="{{ path('app_logout') }}" class="btn btn-outline-dark">Me
                                                    déconnecter</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                <div
                                        class="modal fade"
                                        id="exampleModal"
                                        tabindex="-1"
                                        aria-labelledby="exampleModalLabel"
                                        aria-hidden="true"
                                >
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">
                                                    Se connecter
                                                </h5>
                                                <button
                                                        type="button"
                                                        class="btn-close"
                                                        data-bs-dismiss="modal"
                                                        aria-label="Close"
                                                ></button>
                                            </div>
                                            <div class="modal-body">

                                                {{ render(controller('App\\Controller\\SecurityController::login')) }}

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>

