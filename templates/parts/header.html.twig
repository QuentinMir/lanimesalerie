                            </a>
                        </div>
                        <div class="col-lg-4 col-4">
                            <a
                                    href="{{ path('panier_display') }}"
                                    class="d-flex-navtop align-items-center justify-content-end"
                            >
                                <div class="link-header-panier">

                                    <!-- icon panier -->
