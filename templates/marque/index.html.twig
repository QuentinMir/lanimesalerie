{% extends 'base-admin.html.twig' %}

{% block title %}Marque index{% endblock %}

{% block body %}
    <h1>Marque index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdMarque</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for marque in marques %}
            <tr>
                <td>{{ marque.idMarque }}</td>
                <td>{{ marque.nom }}</td>
                <td>
                    <a href="{{ path('marque_show', {'idMarque': marque.idMarque}) }}">show</a>
                    <a href="{{ path('marque_edit', {'idMarque': marque.idMarque}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('marque_new') }}">Create new</a>
{% endblock %}
