{% extends 'base-admin.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table mb-3">
        <tbody>
        <tr>
            <th>IdProduit</th>
            <td>{{ produit.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ produit.nom }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ produit.description }}</td>
        </tr>
        <tr>
            <th>PrixHt</th>
            <td>{{ produit.prixHt }}</td>
        </tr>
        <tr>
            <th>Disponible</th>
            {% if produit.estDispo %}
                <td>Oui</td>
            {% else %}
                <td>Non</td>
            {% endif %}

        </tr>
        <tr>
            <th>Images</th>
            <td class="row">

                {% for image in produit.images %}
                    <div class="col-lg-3 col-6">
                        <p>Image {{ loop.index }}</p>
                        <img class="rounded img-fluid"
                             src="{{ asset('uploads/imagesproduit/'~ image.lien) }}">
                    </div>
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-dark" href="{{ path('produit_index') }}">Retour Ã  la liste</a>

    <a class="btn btn-outline-warning" href="{{ path('produit_edit', {'id': produit.id}) }}">Modifier</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
