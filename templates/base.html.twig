<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}La Nîmes'alerie{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <!-- swiper -->
        <link
                rel="stylesheet"
                href="https://unpkg.com/swiper/swiper-bundle.min.css"
        />
        <link rel="stylesheet" href="{{ asset('css/style.css') }}?version=2">
        <link rel="stylesheet" href="{{ asset('css/cookie.css') }}?version=2">
    {% endblock %}


</head>
<body>
{{ render(controller('App\\Controller\\NavBarController::index')) }}

{# {% include('parts/header.html.twig') %} #}

{% block body %}{% endblock %}
{% include('parts/footer.html.twig') %}
{% if app.request.cookies.get('accepted') != 1 %}
    <div class="row">
        <div class="col-md-4 col-sm-12 button-fixed">
            <div class="p-3 pb-4 bg-custom rounded">
                <div class="row">
                    <div class="col-10">
                        <h2 class="text-white">Authoriser les Cookies</h2>
                    </div>
                    <div class="col-2 text-center">
                        <i class="fas fa-times"></i>
                    </div>
                </div>
                <p class="text-secondary">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                    tempor incididunt ut labore et dolore magna aliqua.
                </p>
                <a href="{{ path('cookie_authorize') }}" class="btn btn-danger w-100">Accept Cookies</a>
            </div>
        </div>
    </div>
{% endif %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script rel=script" src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>

    <!-- script swiper -->
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

    <!-- icons -->
    <script
            src="https://kit.fontawesome.com/6939106af0.js"
            crossorigin="anonymous"
    ></script>
    <!-- jquery -->
    <script rel=script" src="{{ asset('js/jquery.js') }}"></script>
    <script rel=script" src="{{ asset('js/main.js') }}"></script>

{% endblock %}
</body>
</html>
