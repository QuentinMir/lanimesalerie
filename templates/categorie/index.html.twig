{% extends 'base-admin.html.twig' %}

{% block title %}{{ parent() }} Categorie{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin/dataTable.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script rel=script" src="{{ asset('js/admin/dataTable.js') }}"></script>
    <script rel=script" src="{{ asset('js/admin/initDataTable.js') }}"></script>
{% endblock %}

{% block body %}
    <h1>Categories</h1>

    <table class="table">
        <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Icône</th>
            <th>Bannière</th>
            <th>index</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nom }}</td>
                <td><img src="{{ asset('uploads/imagescat/'~ categorie.iconImage) }}"
                         alt="Icône {{ categorie.nom }}" width="200px">
                </td>
                <td><img src="{{ asset('uploads/imagescat/'~ categorie.bannerImage) }}"
                         alt="Bannière {{ categorie.nom }}" width="200px" height="auto">
                </td>
                <td><img src="{{ asset('uploads/imagescat/'~ categorie.indexImage) }}"
                         alt="Index {{ categorie.nom }}" width="200px" height="auto">
                </td>
                <td>
                    <a class="btn btn-outline-dark" href="{{ path('categorie_show', {'id': categorie.id}) }}">Voir</a>
                    <a class="btn btn-outline-primary" href="{{ path('categorie_edit', {'id': categorie.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-success" href="{{ path('categorie_new') }}">Créer</a>
{% endblock %}
