    <main>
        <!-- Carousel hero box -->
        <div id="carouselHomepage" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                {% for carousel in carouselItems %}
                    <button
                            type="button"
                            data-bs-target="#carouselHomepage"
                            data-bs-slide-to="{{ loop.index0 }}"
                            {% if loop.index0 == 0 %}
                                class="active"
                                aria-current="true"
                            {% endif %}
                            aria-label="Slide {{ loop.index0 +1 }}"
                    >
                        {{ carousel.navigation }}
                    </button>
                {% endfor %}
            </div>
            <div class="carousel-inner">
                {% for carousel in carouselItems %}
                    <div class="carousel-item {% if loop.index0 == 0 %}
                            active
                        {% endif %}">
                        <img
                                src="{{ asset('uploads/imagescarousel/'~carousel.image) }}"
                                class="d-block w-100 img-fluid"
                                width="1360"
                                height="584"
                                title="{{ carousel.navigation }}"
                                alt="{{ carousel.navigation }}"
                        />
                        <div class="carousel-content">
                            <h3>
                                {{ carousel.text }}
                            </h3>
                            {% if carousel.bouton is not null %}
                                <a href="{{ carousel.lien }}" class="mybutton">{{ carousel.bouton }}</a>
                            {% endif %}
                        </div>
                    </div>

                {% endfor %}
            </div>

            <button
                    class="carousel-control-prev"
                    type="button"
                    data-bs-target="#carouselHomepage"
                    data-bs-slide="prev"
            >
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button
                    class="carousel-control-next"
                    type="button"
                    data-bs-target="#carouselHomepage"
                    data-bs-slide="next"
            >
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <!-- Slider produits -->
        <section class="bg-lighter-blue mt-mv pb-5">
            <h2 class="container pt-4 text-center">Meilleures ventes</h2>
            <div class="swiper container">
