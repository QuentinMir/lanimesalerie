{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} | Compte {% endblock %}

{% block body %}
    <div class="container my-4">
        <h1 class="text-center">
            {% if app.request.attributes.get('_route') == "app_register" %}
                S'enregistrer
            {% else %}
                Modifier son compte
            {% endif %}
        </h1>


        <div class="col-lg-6 col-10 mx-auto">
            {% if app.request.attributes.get('_route') == "user_edit" %}
                <a class="btn btn-outline-dark my-4" href="{{ path('compte') }}">Retour</a>
            {% endif %}
            {{ form_start(adresseForm) }}
            {{ form_row(adresseForm.user.email) }}
            {{ form_row(adresseForm.user.plainPassword) }}
            {{ form_row(adresseForm.user.prenom) }}
            {{ form_row(adresseForm.user.nom) }}
            {{ form_row(adresseForm.user.estHomme) }}
            {{ form_row(adresseForm.user.dateNaissance) }}

            {{ form_row(adresseForm.nbRue, {'type':'number'}) }}
            {{ form_row(adresseForm.nomRue) }}
            {{ form_row(adresseForm.codePostal) }}
            {{ form_row(adresseForm.villeNom) }}
            {{ form_row(adresseForm.complement) }}


            <button type="submit" class="btn btn-outline-success">Enregistrer</button>
            {{ form_end(adresseForm) }}
        </div>
    </div>
{% endblock %}

